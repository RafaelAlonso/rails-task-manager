
<div class="container text-center">
  <h1>TASKS MANAGER</h1>
  <h2><%= link_to "Add new task", new_task_path %></h2>

  <table class="td-padded">
    <thead>
      <th>Done</th>
      <th>Description</th>
      <th>Edit</th>
      <th>Delete</th>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <% if task.done == 1 %>
            <td><input type="checkbox" checked disabled></td>
          <% else %>
            <td><input type="checkbox" disabled></td>
          <% end %>
          <td><%= task.description %></td>
          <td><%= link_to "Edit", edit_task_path(task), class: 'btn btn-warning'%></td>
          <td><%= link_to "Delete", task_path(task), method: :delete, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </ul>
</div>
